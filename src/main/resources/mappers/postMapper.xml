<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.walk.post.mapper.PostMapper">
 
 	<select id="selectPostListTest" resultType="map">
 		SELECT
 			*
 		FROM
 			`post` 	
 	</select>
 	
 	 <insert id="insertPost" parameterType="map">
 		INSERT INTO `post`
 		(
 			`userId`
 			, `userLoginId`
 			, `subject`
 			, `place`
 			, `distance`
 			, `time`
 			, `Date`
 			, `content`
 			, `imagePath`
 			, `createdAt`
			, `updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{userLoginId}
 			, #{subject}
 			, #{place}
 			, #{distance}
 			, #{time}
 			, #{visitDate}
 			, #{placeExplain}
 			, #{imagePath}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	 <select id="selectPostList" parameterType="map" resultType="com.walk.post.domain.Post">
 		SELECT
 			*
 		FROM
 			`post`
 		ORDER BY `id` DESC 	
 	</select>
 	
 	 <select id="selectPostByPostId" parameterType="map" resultType="com.walk.post.domain.Post">
 		SELECT
 			`id`
 			, `userId`
 			, `userLoginId`
 			, `subject`
 			, `place`
 			, `distance`
 			, `time`
 			, `Date`
 			, `content`
 			, `imagePath`
 			, `createdAt`
			, `updatedAt`
 		FROM
 			`post`
 		WHERE
 			`id` = #{postId}
 	</select>
 	
 	<update id="updatePostByPostId" parameterType="map">
 		UPDATE `post`
 		SET
 			`subject` = #{subject}
 			, `place` = #{place}
 			, `distance` = #{distance}
 			, `time` = #{time}
 			, `Date` = #{visitDate}
 			, `content` = #{placeExplain}
 			, `updatedAt` = NOW()
 		WHERE
 			`id` = #{postId}
 		
 	</update>
 
 </mapper>